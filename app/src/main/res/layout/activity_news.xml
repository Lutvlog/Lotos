<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Knopka1">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="967dp"
        android:layout_height="1435dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ovosti" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mullermedium"
        android:text="НОВОСТИ"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:onClick="news1"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/news222" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:onClick="news2"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/news111" />

        </LinearLayout>
    </HorizontalScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>